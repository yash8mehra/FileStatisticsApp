<Window x:Class="FileStats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileStats"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="600">
    <Border BorderBrush="#87cefa" BorderThickness="18">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#B0C4DE" BorderBrush="Gray" BorderThickness="0,0,0,1" Margin="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,20,20,20">
                    <Label Content="File:" VerticalAlignment="Center" FontSize="16" FontWeight="Normal" Height="32" Width="40"/>
                    <TextBox x:Name="fileInput" Width="340" Height="35" VerticalAlignment="Center" FontSize="16" BorderBrush="Black" BorderThickness="1" Background="White" Margin="0,0,15,0" KeyDown="fileInput_KeyDown"/>
                    <Button x:Name="btnProcess" Content="Process" Width="65" Height="32" FontSize="16" Background="LightGray" BorderBrush="Black" BorderThickness="1" Click="BtnProcess_Click" Cursor="Hand"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <RadioButton x:Name="rbMin" Content="Min" FontSize="18" FontWeight="Bold" Margin="50,0" IsEnabled="False" Checked="RadioButton_Checked"/>
                <RadioButton x:Name="rbMax" Content="Max" FontSize="18" FontWeight="Bold" Margin="50,0" IsEnabled="False" Checked="RadioButton_Checked"/>
                <RadioButton x:Name="rbAvg" Content="Avg" FontSize="18" FontWeight="Bold" Margin="50,0" IsEnabled="False" Checked="RadioButton_Checked"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,40">
                <Label Content="Value:" FontSize="18" FontWeight="Normal" VerticalAlignment="Center" Margin="0,0,10,0" Height="35"/>
                <Label x:Name="lblValue" Content="NA" FontSize="18" FontWeight="Normal" Background="White" BorderBrush="Black" BorderThickness="4" Width="80" Height="40" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
